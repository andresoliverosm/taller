print("Seleccione la opcion del tipo de robot: ")
print("1. Robot Cilindrico")
print("2. Robot Cartesiano")
print("3. Robot Esferico")

def robot_cilindrico():
    print("Robot Cilindrico")
    print("Posee 2 articulaciones")
    
def robot_cartesiano():
    print("Robot Cartesiano")
    print("Posee 3 articulaciones")
    
def robot_esferico():
    print("Robot Esferico")
    print("Posee 3 articulaciones")
    
opcion = int(input("Ingrese el numero correspondiente a la opcion: "))

if opcion == 1:
    robot_cilindrico()
elif opcion == 2:
    robot_cartesiano()
elif opcion == 3:
    robot_esferico()
else:
    print("Opcion incorrecta")


